                                android:textColor="@color/main_text_color"
                                android:layout_weight="1"
                                android:textSize="15dp"
                                android:layout_marginLeft="5dp"
                                android:textStyle="bold"/>

                            <LinearLayout
                                android:layout_width="match_parent"
