<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appcolor"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/app_name" />

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="#ffffff">


        <FrameLayout
            android:id="@+id/containerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="#ffffff">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/layoutWarning"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textViewWarning"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="17dp"
                            android:layout_marginLeft="5dp"
                            android:text="Provide Values for Calculation"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewAmount"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:text="Loan Amount"
                            android:layout_marginLeft="5dp"
                            android:textSize="15dp"
                            android:textColor="@color/main_text_color"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/editTextLoanAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:drawable/editbox_background"
                            android:digits="0123456789."
                            android:ems="10"
                            android:filterTouchesWhenObscured="true"
                            android:inputType="numberDecimal" />

                        <TextView
                            android:text="INR"
                            android:layout_width="28dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewInterestperINR"
                            android:textColor="@color/main_text_color"
                            android:textSize="15dp"
                            android:textStyle="bold"/>

                        <Button
                            android:text="Calc value"
                            android:layout_width="240dp"
                            android:layout_height="match_parent"
                            android:id="@+id/buttonLoanCalcvalue"
                            android:layout_weight="1"
                            android:textSize="9dp"
                            android:textStyle="bold"
                            android:background="@android:drawable/editbox_background_normal"
                            android:textColor="@color/cardview_light_background"
                            android:backgroundTint="@color/btn_color"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:id="@+id/textViewTermFirst"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:text="  Term 1"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/main_text_color"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textViewInterest"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:text="Interest Rate"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/main_text_color"
                            android:textStyle="bold" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:maxLength="5"
                            android:digits="0123456789."
                            android:id="@+id/editTextLoanInterestRate"
                            android:background="@android:drawable/editbox_background"
                            android:layout_weight="1" />


                        <TextView
                            android:text="% per year"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewInterestper"
                            android:textColor="@color/main_text_color"
                            android:textSize="15dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:text="Months"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView1loanmonths"
                            android:layout_marginLeft="5dp"
                            android:textSize="15dp"
                            android:textColor="@color/main_text_color"
                            android:textStyle="bold"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:maxLength="3"
                            android:digits="0123456789"
                            android:id="@+id/editTextloanmonths"
                            android:background="@android:drawable/editbox_background"
                            android:layout_weight="1" />
                        <TextView
                            android:text="% per year"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewInterestperm"
                            android:textColor="@color/main_text_color"
                            android:textSize="15dp"
                            android:visibility="invisible"
                            android:textStyle="bold"/>

                    </LinearLayout>


                    /*for term 2*/
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:id="@+id/textViewTermSecond"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:text="  Term 2"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/main_text_color"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textViewInterest2"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
