                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/layoutDisplayResult"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:visibility="gone">
                        <LinearLayout
